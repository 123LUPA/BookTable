@model BookTable.Models.Booking

@{
    ViewBag.Title = "Home Page";
}


<div class="booking-holder">

    <div class="booking-text-holder">
        <span class="booking-title">Welcom to Table4You</span>
        <span class="booking-dis">
            Here you can book a table in desired restaurant. You won't wait in line anymore.
            Choose the date and hour below and click find a table It is that easy!
        </span>
    </div>
    @using (Html.BeginForm("Create", "Bookings", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
         <div class="container-fluid">
             <div class="col-xs-3">
                 @Html.LabelFor(model => model.RestaurantId, "RestaurantId", htmlAttributes: new { @class = "" })
                  @Html.DropDownList("RestaurantId", null, htmlAttributes: new { @class = "form-control" })
                   @Html.ValidationMessageFor(model => model.RestaurantId, "", new { @class = "text-danger" })
             </div>
             <div class="col-xs-3">
                 @Html.EditorFor(model => model.BookingDate, new { htmlAttributes = new { @class = "form-control" } })
                 @Html.ValidationMessageFor(model => model.BookingDate, "", new { @class = "text-danger" })
             </div>
             <div class="col-xs-3">
                 @Html.EditorFor(model => model.NumberOfPeople, new { htmlAttributes = new { @class = "form-control" } })
                 @Html.ValidationMessageFor(model => model.NumberOfPeople, "", new { @class = "text-danger" })
             </div>
             <div class="col-xs-3">
                 <input type="submit" value="Create" class="btn btn-default" />

             </div>

         </div>
   
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
