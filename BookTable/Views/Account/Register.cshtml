@model BookTable.Models.RegisterViewModel

    @{
        ViewBag.Title = "Register";
    }



    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal login-form", role = "form" }))
    {
        @Html.AntiForgeryToken()
     
        <div class="register">
            <div class="register-heading">
                <h2>@ViewBag.Title.</h2>
                <h4>Create a new account.</h4>
            </div>
            <hr />

            @Html.ValidationSummary("", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label register-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control register-input" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label register-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control register-input" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Age, new { @class = "col-md-2 control-label register-label " })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Age, new { @class = "form-control register-input" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label register-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control register-input" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label register-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control register-input" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label register-label " })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control register-input" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default register-button" value="Register" />
                </div>
            </div>
        </div>

    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
